<div class="cell-item-controls">
	{{#unless disableFavorite}}
		<a class="cell-item-controls__control {{#if isFavorite~}} cell-item-controls__control--active {{~/if}}"
		   data-tooltip="{{#if isFavorite~}}
			   {{ localize 'FU.FavoriteRemove' }}
			   {{~else~}}
			   {{ localize 'FU.Favorite' }}
		   {{~/if}}"
		   aria-describedby="tooltip"
		   data-action="toggleFavorite">
			<i class="{{#if isFavorite}}fas{{else}}far{{/if}} fa-star"></i>
		</a>
	{{/unless}}
	{{#unless disableEdit}}
		<a class="cell-item-controls__control"
		   data-action="editItem"
		   data-tooltip="{{ localize 'FU.Edit' }}"
		   aria-describedby="tooltip">
			<i class="fas fa-edit"></i>
		</a>
	{{/unless}}
	{{#unless disableMenu}}
		<a class="cell-item-controls__control"
		   data-context-menu="item"
		   data-tooltip="{{ localize 'FU.Settings' }}"
		   aria-describedby="tooltip">
			<i class="fas fa-bars"></i>
		</a>
	{{/unless}}
</div>
