<div class="fu-tags">
    <div class="fu-tag gap-5">
        {{localize 'FU.ClassFeatureVehicleFrame'}}: {{pfuCapitalize frame}}
    </div>
    <div class="fu-tag gap-5">
        {{localize 'FU.ClassFeatureVehicleModuleSlots'}}: {{moduleSlots}}
    </div>
    <div class="fu-tag gap-5">
        {{localize 'FU.ClassFeatureVehiclePassengers'}}: {{passengers}}
    </div>
    <div class="fu-tag gap-5">
        {{localize 'FU.ClassFeatureVehicleDistanceMultiplier'}}: {{distanceMultiplier}}
    </div>
</div>

{{#if description}}
   <div class='chat-desc'>
    <details {{#unless (pfuGetSetting 'optionChatMessageCollapseDescription')}}open{{/unless}}>
        <summary class="collapsible-description align-center">{{localize 'FU.Description'}}</summary>
        {{{description}}}
    </details>
</div>
{{/if}}
