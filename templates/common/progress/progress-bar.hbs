<div class="inline-desc flexrow flex-group-center resource-content"
	 style="border-radius: 6px 12px 12px 6px;">

	<div class="item-progressbar flex-group-center" style="gap: 4px;">
		{{#if displayName}}
			<label class="resource-content">
				<span class="resource-label-sm">{{displayName}}</span>
			</label>
		{{/if}}
		<div class="bar bar-progress">
			<div class="bar-progress-bar bar-project"
				 style="width: {{calculatePercentage data.current
													 data.max}};">
			</div>
			<span class="bar-value"></span>
		</div>
	</div>

	<div class="resource-text-t buttons-inc">
		<span data-resource="item.rp">{{ data.current }}</span>
		<span>/</span>
		<span>{{ data.max }}</span>
	</div>
	{{> 'systems/projectfu/templates/common/progress/partials/progress-controls.hbs'}}
</div>