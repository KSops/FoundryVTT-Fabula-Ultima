<div class="bar-container">
    <div class="bar bar-progress">
        <div class="bar-progress-bar bar-zeropower"
            style="width: {{pfuPercentage this.zeropower.progress.current this.zeropower.progress.max}};">
        </div>
        <span class="bar-value"></span>

        <div class="resource-value-compact">
            <div class="resource-text">
                <span>{{ this.zeropower.progress.current }} / {{ this.zeropower.progress.max }}</span>
            </div>
        </div>
    </div>
    <div class="resource-value">
        <i class="ra ra-aura icon"></i>
        <div class="resource-text">
            <span>{{ this.zeropower.progress.current }} / {{ this.zeropower.progress.max }}</span>
        </div>
    </div>
</div>