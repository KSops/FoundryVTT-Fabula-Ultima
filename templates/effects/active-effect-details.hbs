<section class="tab scrollable{{#if tab.active}} active{{/if}} active-effect-sheet" data-group="{{tab.group}}"
    data-tab="{{tab.id}}" style="color: rgba(17, 41, 41, 0.9)">
    {{formGroup fields.tint value=source.tint rootId=rootId placeholder="#ffffff" classes="desc"}}
    {{formGroup fields.description value=source.description rootId=rootId classes="desc" name="system.description"}}
    {{formGroup fields.disabled value=source.disabled rootId=rootId classes="desc"}}

    {{#if isActorEffect}}
    {{formGroup fields.origin value=source.origin rootId=rootId disabled=true classes="desc"}}
    {{/if}}
    {{#if isItemEffect}}
    {{formGroup fields.transfer value=source.transfer rootId=rootId label=legacyTransfer.label
    hint=legacyTransfer.hint classes="desc active-effect-sheet"}}
    {{/if}}

    {{formGroup fields.statuses value=source.statuses options=statuses rootId=rootId classes="statuses" classes="desc"}}
</section>